{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run build",
    "devPath": "../public",
    "distDir": "../public"
  },
  "package": {
    "productName": "Tauri API",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "externalBin": ["../node_modules/go-ipfs/go-ipfs/ipfs"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.follow.api"
    },
    "cli": {
      "args": [
        {
          "description": "Config path",
          "name": "config",
          "short": "c",
          "takesValue": true
        },
        {
          "description": "App theme",
          "name": "theme",
          "possibleValues": ["light", "dark", "system"],
          "short": "t",
          "takesValue": true
        },
        {
          "description": "Verbosity level",
          "multipleOccurrences": true,
          "name": "verbose",
          "short": "v"
        }
      ],
      "description": "Tauri API example",
      "subcommands": {
        "update": {
          "args": [
            {
              "description": "Update in background",
              "name": "background",
              "short": "b"
            }
          ],
          "description": "Updates the app"
        }
      }
    },
    "security": {
      "csp": ""
    },
    "systemTray": {
      "iconPath": "icons/icon.png"
    },
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://tauri-update-server.vercel.app/update/{{target}}/{{current_version}}"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE5QzMxNjYwNTM5OEUwNTgKUldSWTRKaFRZQmJER1h4d1ZMYVA3dnluSjdpN2RmMldJR09hUFFlZDY0SlFqckkvRUJhZDJVZXAK"
    },
    "windows": [
      {
        "label": "main",
        "title": "Tauri",
        "width": 800,
        "height": 600,
        "resizable": true,
        "visible": false
      },
      {
        "label": "splashscreen",
        "width": 512,
        "height": 512,
        "decorations": false,
        "resizable": false,
        "transparent": true,
        "url": "splashscreen.html"
      }
    ]
  }
}
