{
  "name": "identia",
  "version": "0.4.18",
  "description": "Decentralized, censorship resistant social media on IPFS",
  "productName": "identia",
  "author": "iohzrd <iohzrd@gmail.com>",
  "license": "AGPL-3.0",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "bump": "node scripts/bump-versions.js && npm run update",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "dev": "rollup -c -w",
    "info": "tauri info",
    "postinstall": "npm run renameIpfsBinary",
    "renameIpfsBinary": "node scripts/rename-ipfs-binary.js",
    "serve": "sirv public --no-clear",
    "start": "tauri dev",
    "tauri": "tauri",
    "tauri:build": "tauri build -v",
    "tauri:build-debug": "tauri build --debug -v",
    "tauri:dev": "tauri dev -v",
    "update": "ncu -u && npm install && cd src-tauri && cargo update"
  },
  "devDependencies": {
    "@ltd/j-toml": "^1.35.2",
    "@rollup/plugin-commonjs": "^23.0.0",
    "@rollup/plugin-json": "^5.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^5.0.0",
    "@rollup/plugin-typescript": "^9.0.1",
    "@splidejs/svelte-splide": "^0.2.9",
    "@tauri-apps/cli": "^1.1.1",
    "@tsconfig/svelte": "^3.0.0",
    "buffer": "^6.0.3",
    "carbon-components-svelte": "^0.70.10",
    "carbon-icons-svelte": "^11.3.0",
    "carbon-preprocess-svelte": "^0.9.1",
    "execa": "^6.1.0",
    "ext2mime": "^2.0.0",
    "go-ipfs": "^0.16.0",
    "ipfs-http-client": "^58.0.1",
    "is-ipfs": "^7.0.2",
    "linkify-html": "^4.0.2",
    "linkify-string": "^4.0.2",
    "linkifyjs": "^4.0.2",
    "rollup": "^2.79.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "semver": "^7.3.8",
    "string-strip-html": "^11.6.10",
    "svelte": "^3.51.0",
    "svelte-check": "^2.9.2",
    "svelte-inview": "^3.0.1",
    "svelte-preprocess": "^4.10.7",
    "svelte-spa-router": "^3.3.0",
    "svelte-tauri-filedrop": "^1.0.0",
    "tauri-plugin-sql-api": "github:tauri-apps/tauri-plugin-sql#release",
    "timeago.js": "^4.0.2",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.1.0",
    "sirv-cli": "^2.0.2"
  }
}
